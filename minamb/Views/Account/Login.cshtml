@using System.Web.UI.WebControls
@model minamb.Models.LoginViewModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="pt-PT">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>MINSA- Login</title>
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">

    <link href="~/Assets/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Assets/css/font-awesome.min.css" rel="stylesheet" />
    <link href="~/Assets/css/AdminLTE.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,600,700,300italic,400italic,600italic">
    <link href="~/Assets/css/styles.css" rel="stylesheet" />

    <script src="~/Assets/js/jquery.min.js"></script>
    <script src="~/Assets/js/moment.min.js"></script>
    <script src="~/Assets/js/bootstrap.min.js"></script>
    <script src="~/Assets/js/bootstrap-datetimepicker.min.js"></script>


</head>
<body class="hold-transition login-page">
    <div class="login-box">
        <div class="login-logo">
            <a><img src="/assets/img/govao.jpg" /></a>
        </div>
        <div class="login-box-body">
            <p class="login-box-msg">Iniciar Sessao</p>
            @using (Html.BeginForm("Login", "Account", new { targetUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { role = "form" }))
            {
                @Html.AntiForgeryToken()
                <div class="form-group has-feedback">
                    @Html.LabelFor(m => m.Usuario)
                    @Html.TextBoxFor(m => m.Usuario, new { @class = "form-control" })
                    <span class="glyphicon glyphicon-user form-control-feedback"></span>
                    @Html.ValidationMessageFor(m => m.Usuario, "", new { @class = "text-danger" })
                </div>
                <div class="form-group has-feedback">
                    @Html.LabelFor(m => m.Senha)
                    @Html.PasswordFor(m => m.Senha, new { @class = "form-control" })
                    <span class="glyphicon glyphicon-asterisk form-control-feedback"></span>
                    @Html.ValidationMessageFor(m => m.Senha, "", new { @class = "text-danger" })
                </div>
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <hr />
                <p class="text-center" style="color:red"> @ViewBag.Mensagem</p>
                <br />
                <div class="social-auth-links text-center">
                    <button type="submit" class="btn btn-block btn-bitbucket btn-flat">
                        <i class="fa fa-sign-in"></i>&nbsp;Iniciar Sessão
                    </button>
                </div>
            }
        </div>
    </div>



    <script src="~/assets/js/jquery.min.js"></script>
    <script src="~/assets/js/bootstrap.min.js"></script>
</body>
</html>
